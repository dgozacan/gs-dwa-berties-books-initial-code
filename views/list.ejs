<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= shopData.shopName %> – All Books</title>
</head>
<body>
    <h1><%= shopData.shopName %></h1>

    <h2>Available Books</h2>

    <table border="1" cellpadding="8" cellspacing="0">
        <tr>
            <th>Title</th>
            <th>Price (£)</th>
        </tr>

        <% if (availableBooks && availableBooks.length > 0) { %>
            <% availableBooks.forEach(function(book) { %>
                <tr>
                    <td><%= book.name %></td>
                    <td><%= book.price %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="2">No books found.</td>
            </tr>
        <% } %>
    </table>

    <p><a href="/">Back to home</a></p>
</body>
</html>
